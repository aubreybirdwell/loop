SEARCH_DIRS="/media /run/media /home/$USER/Videos"

# Allowed extensions (case-insensitive)
EXTS="mp4 mov mkv avi m4v"

# If multiple files found, play them all (1) or just the first (0)
PLAY_ALL=1

# mpv options tuned for kiosk use on desktop (X11/Wayland)
MPV_OPTS="--fs --loop=inf --no-osc --no-osd-bar --no-audio-display --really-quiet --hwdec=auto-safe"
